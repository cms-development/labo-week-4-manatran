<header class="navbar navbar-expand-md border-bottom" role="banner">
  <div class="container">
    <div class="row">
      {{ page.header }}
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    {% if page.subheader_left %}
    <section class="col-sm p-3 bg-dark text-white">
      {{ page.subheader_left }}
    </section>
    {% endif %}

    {% if page.subheader_right %}
    <section class="col-sm p-3 bg-dark text-white">
      {{ page.subheader_right }}
    </section>
    {% endif %}
  </div>
</div>

<main role="main" class="container mb-5 mt-5 ">
  <div class="row">

    <div class="col-md-8">
      <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
      {{ page.content }}
      {# /.layout-content #}
    </div>

    {% if page.sidebar %}
    <aside class="col-md-4" role="complementary">
        {{ page.sidebar }}
    </aside>
    {% endif %}

  </div>
</main>

{% if page.footer %}
<footer class="footer">
  <div class="container">
    {{ page.footer }}
  </div>
</footer>
{% endif %}
{# /.layout-container #}
